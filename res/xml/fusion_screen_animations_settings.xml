<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
        android:title="@string/fusion_screen_animations_settings_title"
        xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">

    <PreferenceCategory
        android:key="category_screen_options"
        android:title="@string/fusion_screen_settings_category" >

        <SwitchPreference
            android:key="disable_immersive_message"
            android:title="@string/disable_immersive_message_title"
            android:summary="@string/disable_immersive_message_summary"
            android:persistent="false" />

        <!-- Screen Recorder -->
        <PreferenceScreen
            android:key="screen_recorder"
            android:title="@string/screen_recorder_title"
            android:summary="@string/screen_recorder_summary"
            android:fragment="com.android.settings.fusion.ScreenRecorderSettings" />

    </PreferenceCategory>

    <PreferenceCategory
            android:key="display_density_prefs"
            android:title="@string/display_density">

        <EditTextPreference
                android:key="display_density"
                android:title="@string/display_density"
                android:summary="@string/display_density_summary"
                android:persistent="false"
                android:inputType="numberSigned" />

        <EditTextPreference
                android:key="display_density_override"
                android:title="@string/display_density_override"
                android:summary="@string/display_density_override_summary"
                android:persistent="false"
                android:inputType="numberSigned" />

    </PreferenceCategory>

    <PreferenceCategory
        android:key="animations_options"
        android:title="@string/fusion_animations_settings_category" >

        <PreferenceScreen
            android:key="animation_controls"
            android:title="@string/animation_controls_title"
            android:summary="@string/animation_controls_summary"
            android:fragment="com.android.settings.fusion.AnimationControls" />

        <ListPreference
            android:key="listview_animation"
            android:dialogTitle="@string/listview_animation_title"
            android:title="@string/listview_animation_title"
            android:entries="@array/listview_animation_entries"
            android:entryValues="@array/listview_animation_values"
            android:defaultValue="0" />

        <ListPreference
            android:key="listview_interpolator"
            android:dialogTitle="@string/listview_interpolator_title"
            android:title="@string/listview_interpolator_title"
            android:entries="@array/listview_interpolator_entries"
            android:entryValues="@array/listview_interpolator_values"
            android:defaultValue="0" />

        <PreferenceScreen
            android:key="interface_animation_scroll"
            android:fragment="com.android.settings.fusion.KeyboardAnimationInterfaceSettings"
            android:title="@string/ime_animation_title"
            android:summary="@string/ime_animation_summary" />

        <ListPreference
            android:key="toast_animation"
            android:title="@string/toast_animation_title"
            android:entries="@array/toast_animation_entries"
            android:entryValues="@array/toast_animation_values"
            android:persistent="false" />

        <PreferenceScreen
            android:key="interface_animation_scroll"
            android:fragment="com.android.settings.fusion.ScrollAnimationInterfaceSettings"
            android:title="@string/scrolling_title"
            android:summary="@string/scrolling_summary" />

    </PreferenceCategory>

</PreferenceScreen>

