<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/navigation_pref_title">

    <PreferenceCategory
        android:key="navigation_bar_settings"
        android:title="@string/navbar_settings_category">

    <SwitchPreference
        android:key="enable_nav_bar"
        android:title="@string/navbar_enable_bar_title"
        android:summary="@string/navbar_enable_bar_summary"
        android:defaultValue="false" />

    <com.android.settings.cyanogenmod.SystemSettingSwitchPreference
        android:key="navigation_bar_left"
        android:title="@string/navigation_bar_left_title"
        android:summary="@string/navigation_bar_left_summary"
        android:defaultValue="false" />

    <PreferenceScreen
        android:key="navbar_dimensions"
        android:fragment="com.android.settings.fusion.NavBarDimensions"
        android:title="@string/navbar_style_dimen_title"
        android:dependency="enable_nav_bar" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/hardware_keys_category_title" >

        <com.android.settings.cyanogenmod.SystemSettingSwitchPreference
            android:key="hardware_keys_disable"
            android:title="@string/hardware_keys_disable_title"
            android:summary="@string/hardware_keys_disable_summary"
            android:disableDependentsState="true"
            android:defaultValue="false" />

        <com.android.settings.fusion.ButtonBacklightBrightness
            android:key="button_backlight"
            android:title="@string/button_backlight_title"
            android:dialogTitle="@string/button_backlight_title"
            android:persistent="false" />

        <PreferenceScreen
            android:id="@+id/button_settings"
            android:title="@string/button_pref_title"
            android:fragment="com.android.settings.ButtonSettings"
            android:dependency="hardware_keys_disable" />

    </PreferenceCategory>

</PreferenceScreen>
